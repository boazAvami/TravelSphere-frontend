<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="horizontal"
    android:padding="8dp"
    android:gravity="center_vertical">

    <!-- User Profile Picture -->
    <ImageView
        android:id="@+id/userProfilePicture"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:layout_marginEnd="16dp"
        android:src="@drawable/default_post"
        android:scaleType="centerCrop"
        android:layout_gravity="center"
        android:clipToOutline="true"
        android:outlineProvider="background"
        android:background="@drawable/circle_shape"/>

    <!-- User Info (Name and Origin) -->
    <LinearLayout
        android:orientation="vertical"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:gravity="start">

        <!-- User Name -->
        <TextView
            android:id="@+id/userName"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="User Name"
            android:textStyle="bold"
            android:textSize="18sp"
            android:layout_marginBottom="4dp" /> <!-- Margin between name and origin -->

    </LinearLayout>

    <!-- User Origin (Aligned to the Right) -->
    <TextView
        android:id="@+id/userOrigin"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="User Origin"
        android:gravity="end"
        android:layout_marginStart="16dp" /> <!-- Ensures the origin is to the right -->

</LinearLayout>
