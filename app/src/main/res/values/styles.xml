<resources>
    <style name="ToolbarTitleBold" parent="TextAppearance.Material3.TitleMedium">
        <item name="android:textStyle">bold</item>
    </style>
    <style name="CustomButtonStyle" parent="Widget.MaterialComponents.Button">
        <item name="android:backgroundTint">@color/primary</item>
        <item name="android:textColor">@color/white</item>
        <item name="cornerRadius">12dp</item>
    </style>
    <style name="ClickableText" parent="TextAppearance.MaterialComponents.Body2">
        <item name="android:textColor">@color/clickable_text_color</item>
        <item name="android:textStyle">bold</item>
        <item name="android:clickable">true</item>
        <item name="android:focusable">true</item>
    </style>
    <style name="SimpleText" parent="TextAppearance.MaterialComponents.Body1">
        <item name="android:textColor">@color/primary</item>
    </style>
    <style name="CustomSwitch" parent="Widget.MaterialComponents.CompoundButton.Switch">
        <item name="thumbTint">@color/switch_thumb_color</item>
        <item name="trackTint">@color/switch_track_color</item>
    </style>
    <style name="RoundedImageStyle">
        <item name="cornerFamily">rounded</item>
        <item name="cornerSize">50%</item>
    </style>
    <style name="SettingLabel">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textSize">14sp</item>
        <item name="android:textStyle">bold</item>
        <item name="android:layout_marginTop">8dp</item>
    </style>

    <style name="SettingValue">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textSize">16sp</item>
        <item name="android:paddingBottom">8dp</item>
    </style>
    <style name="circleImageView" parent="">
        <item name="cornerFamily">rounded</item>
        <item name="cornerSize">50%</item>
    </style>
</resources>

